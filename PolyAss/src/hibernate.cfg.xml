<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">123456</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/assjava4</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.default_schema">assjava4</property>
        
        <mapping class="edu.poly.entity.User"/>
        <mapping class="edu.poly.entity.Favorite"/>
        <mapping class="edu.poly.entity.Video"/>
        <mapping class="edu.poly.entity.Share"/>
    </session-factory>
</hibernate-configuration>
